{
  "name": "QaliLab AI",
  "description": "Génère des cas de test et améliore les user stories dans Jira",
  "key": "com.amaniconsulting.qalilab-ai", 
  "baseUrl": "https://qalilab-ai.onrender.com",
  "vendor": {
    "name": "Amani Consulting",
    "url": "https://amaniconsulting.atlassian.net"
  },
  "authentication": {
    "type": "jwt" 
  },
  "apiVersion": 1,
  "scopes": [
    "read:jira-work",
    "write:jira-work", 
    "read:jira-user" 
  ],
  "modules": {
    "webItems": [
      {
        "key": "test-generator-item-top",
        "name": {
          "value": "Générer/Modifier User Story"
        },
        "location": "jira.issue.tools",
        "url": "/jira-panel?issueKey={issue.key}&summary={issue.summary}&description={issue.description}&language=fr",
        "conditions": [ 
          {
            "condition": "user_is_logged_in"
          }
        ]
      },
      {
        "key": "test-generator-item-operations",
        "name": {
          "value": "Generate/Modify User Story (EN)"
        },
        "location": "operations",
        "url": "/jira-panel?issueKey={issue.key}&summary={issue.summary}&description={issue.description}&language=en"
      },
      {
        "key": "test-generator-item-more",
        "name": {
          "value": "Générer/Modifier User Story"
        },
        "location": "jira.issue.more",
        "url": "/jira-panel?issueKey={issue.key}&summary={issue.summary}&description={issue.description}&language=fr"
      }
    ],
    "webPanels": [
      {
        "key": "test-generator-panel",
        "name": {
          "value": "QaliLab AI"
        },
        "location": "atl.jira.view.issue.right.context",
        "url": "/jira-panel?issueKey={issue.key}&summary={issue.summary}&description={issue.description}&language=fr",
        "weight": 100,
        "headers": { 
          "X-Frame-Options": "DENY",
          "Content-Security-Policy": "frame-ancestors 'self' *.atlassian.net"
        }
      }
    ],
    "generalPages": [
      {
        "key": "test-generator-page",
        "name": {
          "value": "QaliLab AI"
        },
        "url": "/",
        "location": "system.top.navigation.bar"
      }
    ]
  },
  "lifecycle": {
    "installed": "/installed",
    "uninstalled": "/uninstalled"
  },
  "context": "jira" 
}
